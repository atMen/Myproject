<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include layout="@layout/title" />-->

    <LinearLayout
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_marginTop="60dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/dl02_03"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/bg_rl_mine"
        android:id="@+id/modify_psw"
        android:padding="@dimen/dimen_18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:drawableLeft="@drawable/wd01_03"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_more"
            />
    </RelativeLayout>

    <View
        android:background="@color/gary_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:background="@drawable/bg_rl_mine"
        android:id="@+id/rl_about"
        android:padding="@dimen/dimen_18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:drawableLeft="@drawable/wd01_07"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_more"
            />
    </RelativeLayout>

    <View
        android:background="@color/gary_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:background="@drawable/bg_rl_mine"
        android:id="@+id/rl_zx"
        android:padding="@dimen/dimen_18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销登录"
            android:drawableLeft="@drawable/sy01_03"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_more"
            />
    </RelativeLayout>

    <View
        android:background="@color/gary_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:background="@drawable/bg_rl_mine"
        android:id="@+id/rl_zxgx"
        android:padding="@dimen/dimen_18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:drawableLeft="@drawable/bbgx"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_more"
            />
    </RelativeLayout>

    <View
        android:background="@color/gary_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>