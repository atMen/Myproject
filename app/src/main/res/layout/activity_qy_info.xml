<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="customer.tcrj.com.myproject.first.QyInfoActivity">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
        android:id="@+id/rl_01"
        android:gravity="center"
        android:layout_margin="@dimen/dp_4"
        android:background="@drawable/bg_button_background_qyinfo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp">

        <ImageView
            android:layout_marginRight="@dimen/dp_4"
            android:id="@+id/text"
            android:layout_centerVertical="true"
            android:background="@drawable/qyxxcx01_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text"
            android:text="企业基本信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_02"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_button_background_qyinfo"            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_marginRight="@dimen/dp_4"
                android:id="@+id/text2"
                android:layout_centerVertical="true"
                android:background="@drawable/qyxxcx01_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text2"
                android:text="检验产品信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_03"

            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_button_background_qyinfo"            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_marginRight="@dimen/dp_4"
                android:id="@+id/text3"
                android:layout_centerVertical="true"
                android:background="@drawable/qyxxcx01_09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text3"
                android:text="人员信息查询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_04"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dp_4"
            android:layout_weight="1"
            android:background="@drawable/bg_button_background_qyinfo"
            android:gravity="center">

            <ImageView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/qyxxcx01_11"
                android:text="企业基本信息" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text4"
                android:text="证书信息查询" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_05"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_button_background_qyinfo"            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_marginRight="@dimen/dp_4"
                android:id="@+id/text5"
                android:layout_centerVertical="true"
                android:background="@drawable/qyxxcx01_15"
                android:text="企业基本信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text5"
                android:text="特种设备信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_06"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_button_background_qyinfo"            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_marginRight="@dimen/dp_4"
                android:id="@+id/text6"
                android:layout_centerVertical="true"
                android:background="@drawable/qyxxcx01_16"
                android:text="企业基本信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text6"
                android:text="计量器具信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_07"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_button_background_qyinfo"            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_marginRight="@dimen/dp_4"
                android:id="@+id/text7"
                android:layout_centerVertical="true"
                android:background="@drawable/qyxxcx01_20"
                android:text="企业基本信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text7"
                android:text="检验检测信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_08"
            android:gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_button_background_qyinfo"            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_marginRight="@dimen/dp_4"
                android:id="@+id/text8"
                android:layout_centerVertical="true"
                android:background="@drawable/qyxxcx01_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text8"
                android:text="生产标准信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>
